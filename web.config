<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Enable WebSocket support for Azure App Service -->
    <webSocket enabled="true" />
    
    <!-- Configure handlers for Python application -->
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    
    <!-- HTTP Platform configuration for ASGI application -->
    <httpPlatform processPath="D:\home\site\wwwroot\startup.sh"
                  arguments=""
                  stdoutLogEnabled="true"
                  stdoutLogFile="D:\home\LogFiles\python.log"
                  startupTimeLimit="120"
                  startupRetryCount="3"
                  requestTimeout="00:04:00">
      <environmentVariables>
        <!-- Ensure Django uses production settings -->
        <environmentVariable name="DJANGO_SETTINGS_MODULE" value="decipherworld.settings.production" />
        <!-- Set ASGI application for WebSocket support -->
        <environmentVariable name="ASGI_APPLICATION" value="decipherworld.asgi.application" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
    <!-- URL Rewrite rules for proper routing -->
    <rewrite>
      <rules>
        <!-- Ensure HTTPS redirect is handled properly -->
        <rule name="Force HTTPS" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
            <add input="{HTTP_HOST}" pattern="^localhost" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>